<div class="container">
  <div class="row center">
    <div class="col s12 m12 l12">
      <div class="card-panel">
        <h2>Sign up</h2>
        <div class="row">

          <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: {class: "col s12"}) do |f| %>
            <%= render "devise/shared/error_messages", resource: resource %>

            <div class="row">
              <div class="input-field col s12">
                <%= f.label :email %><br />
                <%= f.email_field :email, autofocus: true, autocomplete: "email", class: :validate %>
              </div>
            </div>

            <div class="row">
              <div class="input-field col s12">
                <%= f.label :username %><br />
                <%= f.text_field :username, autofocus: true, autocomplete: "username", placeholder: "Enter a username", class: "validate" %>
              </div>
            </div>

            <div class="row">
              <div class="input-field col s12">
                <%= f.label :password %><br />
                <% if @minimum_password_length %>
                  <em>(<%= @minimum_password_length %> characters minimum)</em>
                <% end %><br />
                <%= f.password_field :password, autocomplete: "new-password", class: "validate" %>
              </div>
            </div>

            <div class="row">
              <div class="input-field col s12">
                <%= f.label :password_confirmation %><br />
                <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "validate" %>
              </div>
            </div>


            <!--            <div class="row">-->
            <!--              <div class="input-field col s12">-->
<%#= f.submit "Sign up", class: "btn orange waves-effect waves-light right" %>
            <!--              </div>-->
            <!--            </div>-->
            <div class="row">
              <div class="col s10"></div>
              <div class="col s2">
                <div class="actions">
                  <%= f.submit "Sign up", class: "btn waves-effect waves-light register" %>
                  <!--                  <i class="material-icons right">send</i>-->
                </div>

                <div class="auth-links register-text">
                  <%= render "devise/shared/links" %>
                </div>
              </div>
            </div>

        <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
